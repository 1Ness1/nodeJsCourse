<h1>Add new course</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input placeholder="Placeholder" name="title" id="title" type="text" required class="validate">
        <label for="title">Title of course</label>
        <span class="helper-text" data-error="wrong"></span>
    </div>
    <div class="input-field">
        <input placeholder="Placeholder" name="price" id="price" type="text" required class="validate">
        <label for="price">Price</label>
        <span class="helper-text" data-error="wrong"></span>
    </div>
    <div class="input-field">
        <input placeholder="Placeholder" name="url" id="image" type="text" required class="validate">
        <label for="image">Image</label>
        <span class="helper-text" data-error="wrong"></span>
    </div>

    <button class="btn btn-primary" type="submit">Add course</button>

</form>